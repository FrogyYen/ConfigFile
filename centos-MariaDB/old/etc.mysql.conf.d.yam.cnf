[mysqld]
max_connect_errors      = 4294967295
character-set-server    = utf8
collation-server        = utf8_general_ci

log_error = /home/log/mysql/xtv-wd210-error.log

#log_slow_queries        = /home/log/mysql/mysql-slow.log
slow_query_log 
slow_query_log_file     = /home/log/mysql/xtv-wd210-slow.log
long_query_time         = 2
log-queries-not-using-indexes

skip-name-resolve

query_cache_type        = 1
query_cache_limit       = 2M

server-id               = 008210
log_bin                 = /home/mysql/xtv-wd210-bin.log
expire_logs_days        = 10
max_binlog_size         = 100M
log-slave-updates

#memlock becase vm ram is small

## InnoDB Setting
default-storage-engine  = InnoDB
binlog-format = ROW     #for InnoDB read_comminttd or read_uncommitted 
innodb_flush_log_at_trx_commit = 0
innodb_file_per_table   = 1
innodb_data_file_path   = ibdata1:10M:autoextend:max:2G
innodb_strict_mode      = 1
innodb_buffer_pool_size = 3G
innodb_file_format      = barracuda

## GTID Setting
gtid-mode = on
enforce-gtid-consistency = true
master-info-repository  = TABLE
relay-log-info-repository = TABLE
sync-master-info        = 1
slave-parallel-workers  = 2
binlog-checksum         = CRC32
master-verify-checksum  = 1
slave-sql-verify-checksum = 1
binlog-rows-query-log_events = 1
report-port             = 3306
port                    = 3306
report-host             = 10.1.8.210
